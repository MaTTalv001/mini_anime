<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold"><%=t('users.new.title')%></h1>
      <p class="py-6">新しいアカウントを作成して、サービスをご利用ください。</p>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-control">
            <%= f.label :nickname, class: "label" %>
            <%= f.text_field :nickname, class: "input input-bordered", placeholder: "ニックネーム" %>
          </div>
          <div class="form-control">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input input-bordered", placeholder: "メールアドレス" %>
          </div>
          <div class="form-control">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input input-bordered", placeholder: "パスワード" %>
          </div>
          <div class="form-control">
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, class: "input input-bordered", placeholder: "パスワード（確認）" %>
          </div>
          <div class="form-control mt-6">
            <%= f.submit t('helpers.submit.create'), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <div class="text-center mt-4">
          <%= link_to t('users.new.to_login_page'), login_path, class: "link link-hover" %>
        </div>
      </div>
    </div>
  </div>
</div>