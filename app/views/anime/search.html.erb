<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <h1 class="text-5xl font-bold mb-6">アニメ検索</h1>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
      <%= form_with url: search_path, method: :post, local: true, data: { turbo: false } do |f| %>

          <div class="form-control">
            <%= f.label :query, 'タイトル', class: "label" %>
            <%= f.text_field :query, class: "input input-bordered", placeholder: "アニメタイトルを入力" %>
          </div>
          <div class="form-control">
            <%= f.label :year, '年', class: "label" %>
            <%= f.select :year, options_for_select(@years), { include_blank: '選択してください' }, class: "select select-bordered w-full" %>
          </div>
          <div class="form-control">
            <%= f.label :season, 'シーズン', class: "label" %>
            <%= f.select :season, options_for_select(@seasons.map { |s| [t("seasons.#{s}"), s] }), { include_blank: '選択してください' }, class: "select select-bordered w-full" %>
          </div>
          <div class="form-control mt-6">
            <%= f.submit '検索', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>