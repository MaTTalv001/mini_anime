<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col w-full">
    <h1 class="text-5xl font-bold mb-6">お気に入りアニメ一覧</h1>

    <% if @works.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @works.each do |work| %>
          <%= render 'anime/work', work: work %>
        <% end %>
      </div>
    <% else %>
      <p class="text-xl">お気に入りのアニメはありません。</p>
    <% end %>

    <%= link_to "検索ページへ戻る", search_path, class: "btn btn-primary mt-6" %>
  </div>
</div>